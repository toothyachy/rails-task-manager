<%= form_with model: task do |f| %>
  <%= f.label(:title, class:"form-label fw-bold mt-3") %>
  <%= f.text_field(:title, class: "form-control") %>
  <%= f.label(:details, class:"form-label fw-bold mt-3") %>
  <%= f.text_field(:details, class: "form-control") %>
  <% unless task.new_record? %>
    <div class="form-check mt-3">
      <%= f.check_box(:completed, class: "form-check-input") %>
      <%= f.label(:completed, class:"form-check-label") %>
    </div>
  <% end %>
  <%= f.submit(class:"btn btn-primary mt-3") %>
<% end %>
