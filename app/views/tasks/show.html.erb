<div class="d-flex mb-3">
  <h1 class="display-inline-block flex-grow-1"><%= @task.title %></h1>
  <button class='btn btn-secondary display-inline-block'><%= link_to "Edit task", edit_task_path(@task), :style=>'text-decoration: none; color: white' %></button>
</div>

<div class="bg-light p-3 border my-2">
  <p class="mb-0"><%= @task.details %></p>
</div>

  <div class="form-check my-3">
    <input class="form-check-input" type="checkbox" value="" <%= @task.completed && "checked" %> id="flexCheckDefault">
    <p>This task is <%= @task.completed ? 'completed': 'not completed yet' %>.</p>
  </div>

<%= render "footer", task: @task %>
