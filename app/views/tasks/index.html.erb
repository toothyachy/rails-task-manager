<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <div class="form-check my-3">
    <input class="form-check-input" type="checkbox" value="" <%= task.completed && "checked" %> id="flexCheckDefault">
    <label class="form-check-label text-decoration-none" for="flexCheckDefault"><%= link_to task.title, task_path(task), :style=>'text-decoration: none;' %> âˆ™ </label>
    <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe, task_path(task), :style=>'color: grey;', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>

<%= link_to "<i class='fa-solid fa-plus'></i> Create New Task".html_safe, new_task_path %>
